{
    "manifest_version":3,
    "name":"SGE Ágil",
    "version":"0.6.1",
    "description":"Adiciona recursos ao SGE SENAI",
    "author":"Raffael Christopher Soares Souza",
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
       "128": "./icons/icon128.png" 
    },
    "action":{
        "default_title": "SGE Ágil"
    },
    "permissions": [
        "tabs",
        "scripting",
        "contextMenus"
    ],
    "optional_permissions": [
        "downloads"
    ],
    "background": {
        "service_worker": "./background.js"
      },
    "content_scripts": [{
        "js": ["SGE_Agil_cookies.js", "barraDePesquisa.js", "Dark_mode.js", "assistenteFrequencia.js", "plano_aula_assistido.js", "lista_turmas.js", "arquivar_turmas.js", "aviso_novas_turmas.js", "faltas_consecutivas.js", "preset_testes.js", "xlsx.style.min.js","planilhas_notas.js", "script.js"],
        "matches": [
            "http://www2.fiemg.com.br/Corpore.Net/*",
            "https://www2.fiemg.com.br/Corpore.Net/*",
            "http://prados101.fiemg.com.br/Corpore.Net/*",
            "https://prados101.fiemg.com.br/Corpore.Net/*"
        ]
    }],
    "web_accessible_resources": [{
        "resources": ["SGE_Agil_basic.css","dark_mode.css","icons/btRaio_amarelo.gif","icons/btRaio_azul.gif","icons/mn_Professor.gif","icons/sesi-senai.png", "icons/upload20x13.png", "svg/archive-box-bold-svgrepo-com.svg", "svg/archive-out-svgrepo-com.svg"],
        "matches": [
            "http://www2.fiemg.com.br/*",
            "https://www2.fiemg.com.br/*",
            "http://prados101.fiemg.com.br/*",
            "https://prados101.fiemg.com.br/*"
        ]
    }],
    "host_permissions": [
        "http://www2.fiemg.com.br/Corpore.Net/*",
        "https://www2.fiemg.com.br/Corpore.Net/*",
        "http://prados101.fiemg.com.br/Corpore.Net/*",
        "https://prados101.fiemg.com.br/Corpore.Net/*"
    ]
}